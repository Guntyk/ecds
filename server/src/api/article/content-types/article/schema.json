{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Articles",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "maxLength": 300
    },
    "content": {
      "type": "blocks",
      "required": true
    },
    "media": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "videos"
      ]
    },
    "views": {
      "type": "biginteger",
      "min": "0",
      "required": true,
      "default": "0"
    },
    "likes": {
      "type": "biginteger",
      "required": true,
      "min": "0",
      "default": "0"
    },
    "publicationDate": {
      "type": "date",
      "required": true
    }
  }
}
